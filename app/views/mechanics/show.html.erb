<h2>Mechanic: <%= @mechanic.name %></h2>

<p>Name: <%= @mechanic.name %></p>
<p>Years: <%= @mechanic.years_experience %></p>

<h4>Rides</h4>
<% @mechanic.rides_open_by_thrill_rating.each do |ride| %>
  <p><%= ride.name %></p>
<% end %>

<%= form_with url: "/mechanics/#{@mechanic.id}", method: :patch, local: true do |f| %>
    <%= f.label :add_ride, "Search Ride: " %>
    <%= f.text_field :add_ride %>
    <%= f.submit "Add Ride" %>
<% end %>

